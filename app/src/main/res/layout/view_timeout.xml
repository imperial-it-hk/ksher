<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_timeout_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_one_type"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            tools:text="30" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp"
            tools:text="Seconds" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_mobile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:scaleType="centerInside"
            android:src="@drawable/icon_confirm_blue" />
    </LinearLayout>

    <View
        android:id="@+id/line_00"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintTop_toBottomOf="@+id/btn_mobile_type" />
</LinearLayout>

