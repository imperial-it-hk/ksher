<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tableLayoutBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tranType_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Trans Type"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tran_type_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="SALE"
                android:textColor="@color/colorPrimaryLight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_wallet_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Wallet"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_wallet_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Rabbit Line Pay"
                android:textColor="@color/colorPrimaryLight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trace_no_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Trace No"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trace_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="00000"
                android:textColor="@color/colorPrimaryLight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_amount_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Amount"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="THE 0.00"
                android:textColor="@color/colorPrimaryLight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/StandardButton"
                android:layout_width="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_cancel"
                android:drawableTint="#ff1100"
                android:enabled="false"
                android:text="@string/cancel"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/StandardButton"
                android:layout_width="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>